


<h1>Log in</h1>
<p>Find me in app/views/user/new.html.erb</p>

<div class="row">
<% if !logged_in? %>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: {action: "create"} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>


      <%= f.submit "Log in & sign up" %>
    <% end %>
  </div>
<% else %>
	<p> <%= current_user.name %></p>
<% end %>	
</div>